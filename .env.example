# Environment Configuration Template for A1Betting Backend
# Copy this to .env and customize for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///a1betting.db
# Production (PostgreSQL) - uncomment and configure for production
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/a1betting

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_CONNECTION_TIMEOUT=10
DB_RETRY_ATTEMPTS=3

# =============================================================================
# CACHE CONFIGURATION  
# =============================================================================
# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Sports Data APIs
THEODDS_API_KEY=your_theodds_api_key_here
SPORTRADAR_API_KEY=your_sportradar_api_key_here
ESPN_API_KEY=your_espn_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_BURST=10

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8173,http://localhost:8174,http://127.0.0.1:8173

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend Server
BACKEND_PORT=8001
HOST=0.0.0.0
PORT=8001

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:8174
VITE_BACKEND_URL=http://localhost:8001

# =============================================================================
# ML & DATA PIPELINE CONFIGURATION
# =============================================================================
# Model Configuration
ML_MODEL_CACHE_TTL=3600
ML_BATCH_SIZE=100
ML_PREDICTION_TIMEOUT=30

# Data Pipeline
DATA_REFRESH_INTERVAL=300
STATCAST_DATA_PATH=./data/statcast/
ENABLE_FEATURE_ENGINEERING=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Hot Reload
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_ROUTES=true

# Testing
ENABLE_TEST_ENDPOINTS=false
TEST_DATABASE_URL=sqlite+aiosqlite:///test_a1betting.db

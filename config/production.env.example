# Production Environment Configuration for A1Betting7-13.2
# IMPORTANT: Copy this file to .env.production and update with actual values
# NEVER commit actual secrets to version control

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Production PostgreSQL connection
DATABASE_URL=postgresql://a1betting:${POSTGRES_PASSWORD}@postgresql-service:5432/a1betting_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_CONNECTION_TIMEOUT=10
DATABASE_RETRY_ATTEMPTS=3

# Fallback database (read-only replica)
FALLBACK_DATABASE_URL=postgresql://a1betting:${POSTGRES_PASSWORD}@postgresql-replica-service:5432/a1betting_prod

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Redis configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis-service:6379/0
REDIS_TTL=300
REDIS_MAX_CONNECTIONS=100

# ===========================================
# API KEYS (Store in Kubernetes Secrets)
# ===========================================
# SportRadar API
SPORTRADAR_API_KEY=${SPORTRADAR_API_KEY}
SPORTRADAR_API_ENDPOINT=https://api.sportradar.us

# The Odds API
THE_ODDS_API_KEY=${THE_ODDS_API_KEY}
THE_ODDS_API_ENDPOINT=https://api.the-odds-api.com

# ESPN API (public access)
ESPN_API_ENDPOINT=https://site.api.espn.com/apis/site

# Weather API
WEATHER_API_KEY=${WEATHER_API_KEY}
WEATHER_API_ENDPOINT=https://api.weatherapi.com

# News API
NEWS_API_KEY=${NEWS_API_KEY}
NEWS_API_ENDPOINT=https://newsapi.org

# Injury API
INJURY_API_KEY=${INJURY_API_KEY}
INJURY_API_ENDPOINT=https://api.sportsdata.io

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Configuration
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=20

# CORS Configuration
CORS_ORIGINS=https://a1betting.com,https://www.a1betting.com
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# OBSERVABILITY CONFIGURATION
# ===========================================
# OpenTelemetry
OTEL_SERVICE_NAME=a1betting-backend
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
OTEL_EXPORTER_OTLP_INSECURE=true
OTEL_RESOURCE_ATTRIBUTES=service.name=a1betting-backend,service.version=1.0.0,deployment.environment=production

# Prometheus Metrics
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics

# Logging
LOG_FORMAT=json
LOG_CORRELATION_ID_HEADER=X-Correlation-ID

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Email Service (for notifications)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_TLS=true
SMTP_FROM_EMAIL=noreply@a1betting.com

# Webhook URLs
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
DISCORD_WEBHOOK_URL=${DISCORD_WEBHOOK_URL}

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Application settings
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEPALIVE_TIMEOUT=5
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Cache settings
CACHE_DEFAULT_TTL=300
CACHE_SPORTS_DATA_TTL=600
CACHE_ODDS_TTL=60
CACHE_PREDICTIONS_TTL=1800

# ===========================================
# FEATURE FLAGS
# ===========================================
# Feature toggles
ENABLE_REAL_TIME_ODDS=true
ENABLE_ENHANCED_REVOLUTIONARY=true
ENABLE_NEUROMORPHIC_COMPUTING=true
ENABLE_MAMBA_STATE_SPACE=true
ENABLE_CAUSAL_INFERENCE=true
ENABLE_TOPOLOGICAL_ANALYSIS=true
ENABLE_RIEMANNIAN_GEOMETRY=true
ENABLE_GPU_ACCELERATION=false
ENABLE_REAL_TIME_MONITORING=true
ENABLE_CACHE_PREDICTIONS=true
ENABLE_PARALLEL_PROCESSING=true

# Sports modules
ENABLE_MLB_MODULE=true
ENABLE_NBA_MODULE=true
ENABLE_NFL_MODULE=true
ENABLE_NHL_MODULE=true

# Advanced features
ENABLE_SOCIAL_SENTIMENT=true
ENABLE_WEATHER_INTEGRATION=true
ENABLE_INJURY_TRACKING=true
ENABLE_NEWS_SENTIMENT=true

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# S3 Backup settings
S3_BACKUP_BUCKET=${S3_BACKUP_BUCKET}
S3_BACKUP_REGION=us-east-1
S3_ACCESS_KEY_ID=${S3_ACCESS_KEY_ID}
S3_SECRET_ACCESS_KEY=${S3_SECRET_ACCESS_KEY}
BACKUP_RETENTION_DAYS=30

# ===========================================
# MONITORING AND ALERTING
# ===========================================
# Health check configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Alert thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
ERROR_RATE_THRESHOLD=5
RESPONSE_TIME_THRESHOLD=2000

# ===========================================
# COMPLIANCE AND SECURITY
# ===========================================
# Data retention
DATA_RETENTION_DAYS=2555  # 7 years
LOG_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=2555

# Encryption
ENCRYPTION_KEY=${ENCRYPTION_KEY}
FIELD_ENCRYPTION_ENABLED=true

# Privacy settings
GDPR_COMPLIANCE_ENABLED=true
DATA_ANONYMIZATION_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# ===========================================
# CDN AND STATIC ASSETS
# ===========================================
# CDN Configuration
CDN_URL=https://cdn.a1betting.com
STATIC_FILES_CDN_ENABLED=true
CDN_CACHE_TTL=86400

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Deployment metadata
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_DATE=${DEPLOYMENT_DATE}
GIT_COMMIT_SHA=${GITHUB_SHA}
BUILD_NUMBER=${GITHUB_RUN_NUMBER}

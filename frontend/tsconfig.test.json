{
  // Do NOT extend the main tsconfig.json to avoid inheriting incompatible settings
  // "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist", "dist-electron", "build"]
}

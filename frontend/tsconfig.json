{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["@testing-library/jest-dom", "vite/client", "react", "react-dom", "framer-motion"],
    
    
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/*"]
    },
    
    
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "./jest.setup.js",
    "./jest.setup.ts"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "build"
  ],
  
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}

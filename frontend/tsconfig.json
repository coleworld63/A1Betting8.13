{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["@testing-library/jest-dom", "vite/client", "react", "react-dom", "framer-motion"],
    /* Bundler mode */
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/*"]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "./jest.setup.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
